import tkinter



#Callback funk
def deleteMessage():
    print("Your message sucks major balls so we deleted it")



#Make a window
window = tkinter.Tk()



#Adding the buttons
delete_message = tkinter.Button(window, text = "Delete message", command = deleteMessage, bg = 'purple')



#Pack order
delete_message.pack()



#Doing the thing
window.mainloop()
